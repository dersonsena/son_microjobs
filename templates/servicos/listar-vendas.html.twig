{% extends 'base_painel.html.twig' %}

{% block title %}Listando compras de {{ app.user.nome }}{% endblock %}

{% block topo_painel %}
    <h3>Listando Compras</h3>
{% endblock %}

{% block body_painel %}
    {% for venda in vendas %}
        <div class="card mt-2">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-1">
                        <img src="{{ asset(caminho_imagens_jobs ~ venda.servico.imagem) }}" alt="{{ venda.servico.titulo }}" width="60">
                    </div>
                    <div class="col-md-5">
                        <h5>{{ venda.servico.titulo }}</h5>
                    </div>
                    <div class="col-md-2">
                        <p>{{ venda.servico.dataCadastro|date("d/m/Y") }}</p>
                    </div>
                    <div class="col-md-3">
                        <p>{{ venda.freelancer.nome }}</p>
                    </div>
                    <div class="col-md-1">
                        {#<a href="" class="float-right btn btn-danger btn-sm"><i class="fa fa-trash-alt"></i></a>#}
                        {#<a href="" class="float-right btn btn-success btn-sm mr-1"><i class="fa fa-pencil-alt"></i></a>#}
                    </div>
                </div>
            </div>
        </div>

    {% else %}
        <div class="card mb-2">
            <div class="card-body">
                <div class="alert alert-warning">Nenhum servi√ßo encontrado.</div>
            </div>
        </div>
    {% endfor %}

{% endblock %}