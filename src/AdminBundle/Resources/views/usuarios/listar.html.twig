{% extends '@Admin/base_admin.html.twig' %}

{% block body_admin %}
    <h3>Listando Usuários</h3>
    <hr />

    <div class="row mb-2">
        <div class="col-md-4">
            <form action="" name="form_filtro_status">
                <select name="status" id="" class="form-control-sm form-control float-left" onchange="document.form_filtro_status.submit()">
                    <option value="" {% if status == "" %}selected="selected"{% endif %}>Todos os Status</option>
                    <option value="1" {% if status is same as('1') %}selected="selected"{% endif %}>Ativo</option>
                    <option value="0" {% if status is same as('0') %}selected="selected"{% endif %}>Inativo</option>
                </select>
            </form>
        </div>
    </div>

    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Nome</th>
                <th>E-mail</th>
                <th class="text-center">Status</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
        {% for usuario in usuarios %}
            <tr>
                <td>{{ usuario.nome }}</td>
                <td>{{ usuario.email }}</td>
                <td class="text-center">
                    {% if usuario.status == 1 %}
                        <i class="fa fa-check-circle text-success"></i>
                    {% else %}
                        <i class="fa fa-ban text-danger"></i>
                    {% endif %}
                </td>
                <td>
                    {% if usuario.roles.0 == 'ROLE_ADMIN' %}
                        Administrador
                    {% elseif usuario.roles.0 == 'ROLE_CLIENTE' %}
                        Cliente
                    {% else %}
                        Freelancer
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="table-info">Nenhum usuário encontrado</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

